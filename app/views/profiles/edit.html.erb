<div class="row">
  <div class="col-sm-12">
    <h3>User</h3>
    <p>Name: <%= @user.name if @user.name %></p>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <div class="profile_photo">
        <%= image_tag @user.profile.avatar.url(:thumb) %>
    </div>
  </div>
  <div class="col-sm-9">

  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= form_for @profile, html: {role: "form"} do |f| %>
        <div class="form-group">
          <%= f.label :avatar, 'Your Avatar Photo' %><%= f.file_field :avatar %>
          <%= f.label :profilebg, 'Your Profile Background Photo' %> <%= f.file_field :profilebg %>
          <%= f.label :profilevideo, 'Your Profile Video' %> <%= f.file_field :profilevideo %>
        </div>
        <div class="form-group">
          <%= f.label :first_name %> <%= f.text_field :first_name, class: "form-control" %>
          <%= f.label :last_name %> <%= f.text_field :last_name, class: "form-control" %>
          <%= f.label :date_of_birth %> <%= f.text_field :date_of_birth, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :twitteruser, 'Twitter User Name' %>
          <div class="input-group">
            <span class="input-group-addon">@</span>
            <%= f.text_field :twitteruser, class: "form-control" %>
          </div>
          <%= f.label :facebookuser, 'Facebook User Name' %> <%= f.text_field :facebookuser, class: "form-control" %>
        </div>
        <%= f.submit class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
