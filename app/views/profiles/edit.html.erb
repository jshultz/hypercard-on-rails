<div class="row">
  <div class="col-sm-12">
    <h3>User</h3>
    <p>Name: <%= @user.name if @user.name %></p>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <div class="profile_photo">
        <%= image_tag @user.profile.avatar.url(:thumb) %>
    </div>
  </div>
  <div class="col-sm-9">

  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= form_for @profile do |f| %>
        Avatar : <%= f.file_field :avatar %>
        Profile Photo Background: <%= f.file_field :profilebg %>
        First name: <%= f.text_field :first_name %><br />
        Last name : <%= f.text_field :last_name %><br />
        Birth Date : <%= f.text_field :date_of_birth %> <br/>
        Twitter Username: <%= f.text_field :twitteruser %> <br/>
        Facebook Username: <%= f.text_field :facebookuser %> <br/>
        <%= f.submit %>
    <% end %>
  </div>
</div>
